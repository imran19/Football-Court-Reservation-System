@using FCRS.Models;
@model IEnumerable<FCRS.Models.Info>
@{
    ViewBag.Title = "Index";
}
@{
            User user = ViewData["user"] as User;
}




<head>
</head>
<body style="width: 100%; height: 100%;">

</body>

<h2>Info</h2>

<form action="/Info/SendReview">
    <div id="Search">
        <input type="text" name="text" />


        <input type="submit" value="Post" class="btn btn-default" />
    </div>
</form>
<br />
@*@foreach (Message msg in Model@*)*@

@*<div class="text-left">@msg.MessageText</div>*@


<div class="form-group">
    @*@foreach (Info message in Model)*@
    @foreach(Info message in Model)
    {
        <div class="text-left">

            <div><b>@message.User.Firstname</b></div>
            <div> @message.InfoText</div>
            <br />
            @if (user != null && user.Admin != false)
            {
                <div>@Html.ActionLink("Delete", "DeleteMessage", new { id = message.InfoID })</div>
            }


        </div>
        <hr />

    }

</div>



